{
  "name": "@josephuspaye/powershell",
  "version": "0.0.0",
  "description": "Run PowerShell commands from Node.js and get the results as text, JSON, CSV, or HTML",
  "main": "dist/powershell.js",
  "types": "dist/powershell.d.ts",
  "repository": "https://github.com/JosephusPaye/powershell.git",
  "author": "Josephus Paye II",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "uvu -r esm tests/",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.js\" \"*.{js,json,md}\"",
    "format:check": "prettier --list-different \"src/**/*.ts\" \"tests/**/*.js\" \"*.{js,json,md}\""
  },
  "devDependencies": {
    "@types/node": "^14.14.12",
    "esm": "^3.2.25",
    "prettier": "^2.1.2",
    "typescript": "^4.0.3",
    "uvu": "^0.3.4"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true
  }
}
